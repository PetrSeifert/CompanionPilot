RUST_LOG=info
HTTP_BIND=0.0.0.0:8080

# Discord integration
DISCORD_TOKEN=

# Model provider
MODEL_PROVIDER=auto
OPENROUTER_API_KEY=
OPENROUTER_MODEL=anthropic/claude-3.5-sonnet
OPENROUTER_REFERER=
OPENROUTER_TITLE=CompanionPilot
OPENAI_API_KEY=
OPENAI_STT_MODEL=gpt-4o-mini-transcribe
OPENAI_TTS_MODEL=gpt-4o-mini-tts
OPENAI_TTS_VOICE=alloy

# Tooling
TAVILY_API_KEY=

# Discord voice (AI tool-call driven)
VOICE_ENABLED=false
# Comma-separated guild:channel pairs, e.g. 123456789012345678:234567890123456789
VOICE_ALLOWLIST=
VOICE_IDLE_TIMEOUT_SEC=300
VOICE_LISTEN_WINDOW_MS=12000
VOICE_CHUNK_GAP_MS=700
VOICE_MAX_TURN_MS=12000

# Storage (local compose defaults)
DATABASE_URL=postgres://postgres:postgres@localhost:5432/companionpilot
REDIS_URL=redis://localhost:6379
